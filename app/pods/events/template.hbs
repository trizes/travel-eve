<h2 id="title">Welcome to TravelEve</h2>
<p class="intro">TravelEve is the place where you store your travel events and reflect on them in your leisure time. Don't forget the good times!</p>

<div class="main">
  {{#each model as |item|}}
    <div class="list-event">
      <h3 class="event-title">{{item.title}}</h3>
      <p class="short-description">{{item.short_description}} {{link-to "more..." "events.event" item}}</p>
    </div>
  {{/each}}
  {{outlet}}
</div>
